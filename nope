# Division
def diviF(selectedOption):
    try:
        firstNum = (int(float(input("Enter a number: "))))
        secondNum = (int(float(input("Enter a second number: "))))
        result = firstNum/secondNum
    except ValueError:
        print("Invalid input. Please restart the program and try again.")
        time.sleep(5)
    print(result)

# Multiplication
def multF(selectedOption):
    try:
        firstNum = (int(float(input("Enter a number: "))))
        secondNum = (int(float(input("Enter a second number: "))))
        result = firstNum*secondNum
    except ValueError:
        print("Invalid input. Please restart the program and try again.")
        time.sleep(5)
    print(result)

# Addition
def addiF(selectedOption):
    try:
        firstNum = (int(float(input("Enter a number: "))))
        secondNum = (int(float(input("Enter a second number: "))))
        result = firstNum+secondNum
    except ValueError:
        print("Invalid input. Please restart the program and try again.")
        time.sleep(5)
    print(result)

# Subtraction
def subsF(selectedOption):
    try:
        firstNum = (int(float(input("Enter a number: "))))
        secondNum = (int(float(input("ENter a second number: "))))
        result = firstNum-secondNum
    except ValueError:
        print("Invalid input. Please restart the program and try again.")
        time.sleep(5)
    print(result)

print("Welcome! Please select one of the following options to continue:")
# Menu
